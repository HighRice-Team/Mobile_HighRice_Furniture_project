	<!-- Sell에서 쓰인 것, 매니저 등 처리 확인할 것 -->
	<select id="selectMySell_product" resultType="productVo">
		select * from product where member_id=#{member_id} order by product_id
	</select>

	<!-- min, max 값이 무엇? -> 페이징
